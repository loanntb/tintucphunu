<%include ../partials/header%>
</head>

<body>
    <div id="wrapper">
        <%include ../partials/menu%>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-md-12" align="center">
                    <h1 class="page-header">Tin Tức</h1>
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Danh Sách
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover"
                                id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Số TT</th>
                                        <th>Tiêu đề</th>
                                        <th>Khôi phục</th>
                                        <th>Xóa</th>
                                        <th>Xóa tất cả</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.postsT.forEach(function (i, index){ %>
                                    <tr class="gradeC">
                                        <td>
                                            <%=index + 1%>
                                        </td>
                                        <td>
                                            <div class="title">
                                                <a class="tieude" href="#" data-toggle="tooltip" data-placement="top"
                                                    title="<%=i.title%>">
                                                    <%=i.title%>
                                                </a>
                                            </div>
                                        </td>
                                       
                                        <td>
                                            <%include phuchoi%>
                                            <button class="btn-primary btn" data-toggle="modal"
                                                data-target="#myModal<%=i.post_id%>"><i
                                                    class="fa fa-undo"></i></button>
                                        </td>
                                        <td class="center">
                                            <%include xoa%>
                                            <button class="btn-danger btn" data-toggle="modal"
                                                data-target="#xoaModal<%=i.post_id%>"><i
                                                    class="fa fa-trash-o"></i></button>
                                        </td>
                                        <td class="center">
                                            <%include deleteAll%>
                                            <button class="btn-danger btn" data-toggle="modal"
                                                data-target="#xoaModal"><i
                                                    class="fa fa-trash-o"></i></button>
                                    </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
    </div>
    <%include ../partials/footer%>
    <!-- DataTables JavaScript -->
    <script src="/admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/admin/dist/js/sb-admin-2.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $('#dataTables-example').DataTable({
                responsive: true
            });

        });

    </script>
</body>