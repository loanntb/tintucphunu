<%include ../partials/header%>
    </head>
    <body>
        <div id="wrapper">
        <%include ../partials/menu%>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">Loại Tin</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <style>
                                label {
                                    color: #fff;
                                    font-size: 20px;
                                    margin-top: 20px; 
                                }
                            </style>
                            <div class="card-block">
                                <form  action="/admin/loaitin/sua/<%=data.type[0].type_id%>" method="post">
                                    <div class="form-group">
                                        <label>Tên loại tin</label>
                                        <input class="form-control" name="type_name" placeholder="Nhập vào tiêu đề" value="<%=data.type[0].type_name%>">
                                    </div>

                                    <div class="form-group">
                                        <label>Thể Loại</label>
                                        <select name="category_id" class="form-control" id="controlSelect">
                                            <option value="<%=data.type[0].category_id%>"><%=data.type[0].name%></option>
                                            <% data.category.forEach(function (i){ %>
                                                <% if(i.category_id === data.type[0].category_id){%>
                                                    <option value="<%=i.category_id%>" style="display: none;"><%=i.name%></option>
                                                <%} else{%>
                                                    <option value="<%=i.category_id%>"><%=i.name%></option>
                                                <%}%>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <button type="reset" class="btn btn-default">Làm mới</button>
                                    <button type="submit" value="submit" class="btn btn-primary submit">Sửa</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- DataTables JavaScript -->
        <script src="/admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
        <script src="/admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
        <script src="/admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
        <!-- Custom Theme JavaScript -->
        <script src="/admin/dist/js/sb-admin-2.js"></script>
    
    </body>