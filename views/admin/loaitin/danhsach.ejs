<%include ../partials/header%>
</head>

<body>
    <div id="wrapper">
        <%include ../partials/menu%>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-md-12" align="center">
                    <h1 class="page-header">Loại tin</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="/admin/loaitin/them" title="Thêm tin tức mới"><button type="button"
                            class="btn-success btn"><i class="fa fa-plus"></i></button></a>
                </div>
            </div>
            <br>
            <br>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Danh Sách
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover"
                                id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Số Thứ Tự</th>
                                        <th>Tên Loại Tin</th>
                                        <th>Tên Thể Loại</th>
                                        <th>Sửa</th>
                                        <th>Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.types.forEach(function (i, index){ %>
                                    <tr class="gradeC">
                                        <td>
                                            <%=index + 1%>
                                        </td>
                                        <td>
                                            <%=i.type_name%>
                                        </td>
                                        <td>
                                            <%=i.name%>
                                        </td>
                                        <td>
                                            <a href="/admin/loaitin/sua/<%=i.type_id%>"><button type="button"
                                                    class="btn-info btn"><i class="fa fa-edit"></i></button></a>
                                        </td>
                                        <td class="center">

                                            <%include xoa%>
                                            <button class="btn-danger btn" data-toggle="modal"
                                                data-target="#xoaModal<%=i.type_id%>"><i
                                                    class="fa fa-trash-o"></i></button>

                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
    </div>
    <%include ../partials/footer%>
    <!-- DataTables JavaScript -->
    <script src="/admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/admin/dist/js/sb-admin-2.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
</body>